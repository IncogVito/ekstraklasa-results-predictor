{
  "manifest_version": 3,
  "name": "Ekstraklasa statistics extractor",
  "version": "1.0",
  "description": "Scrap data from ekstraklasa statistics page and export it to JSON file",
  "permissions": ["activeTab"],
  "action": {
    "default_title": "Ekstraklasa statistics extractor"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
